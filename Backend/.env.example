# Backend Environment Variables

# Server Configuration
NODE_ENV=production
PORT=8080

# Frontend Configuration (for CORS and static serving)
FRONTEND_URL=https://yasinheavenstarhotel.com
SERVE_STATIC=false
BUILD_PATH=./build

# Database Configuration (Railway provides this automatically)
MONGODB_URI=your-railway-mongodb-connection-string

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Admin Configuration
ADMIN_EMAIL=admin@hotel.com
ADMIN_PASSWORD=admin123

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100